<Page
    x:Class="CheckBox_ex.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CheckBox_ex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="466,109,0,0" TextWrapping="Wrap" Text="請選您所擁有的卡片" VerticalAlignment="Top" FontSize="20" Height="25" Width="198"/>
        <StackPanel x:Name="stackPanel1" HorizontalAlignment="Left" Height="163" Margin="430,148,0,0" VerticalAlignment="Top" Width="291" RenderTransformOrigin="0.505,0.511">
            <StackPanel.RenderTransform>
                <CompositeTransform Rotation="0" TranslateX="0.03" TranslateY="-0.02"/>
            </StackPanel.RenderTransform>
            <CheckBox Content="台卡" VerticalAlignment="Stretch" FontSize="20"/>
            <CheckBox Content="綠卡" VerticalAlignment="Stretch" FontSize="20"/>
            <CheckBox Content="楓葉卡" VerticalAlignment="Stretch" FontSize="20"/>
            <CheckBox Content="櫻花卡" VerticalAlignment="Stretch" FontSize="20"/>
        </StackPanel>
        <Button x:Name="btnSend" Content="送出" HorizontalAlignment="Left" Margin="445,343,0,0" VerticalAlignment="Top" Height="72" Width="222" Click="btnSend_Click"/>

    </Grid>
</Page>
